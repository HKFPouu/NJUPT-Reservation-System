.stepper {
  width: 80px;
  height: 26px;
  border: 1px solid #ccc;
  border-radius: 3px;
  margin: 0 auto;
}

.stepper text {
  width: 19px;
  line-height: 26px;
  text-align: center;
  float: left;
}

.stepper input {
  width: 40px;
  height: 26px;
  float: left;
  margin: 0 auto;
  text-align: center;
  font-size: 12px;
  border-left: 1px solid #ccc;
  border-right: 1px solid #ccc;
}

.stepper .normal {
  color: black;
}

.stepper .disabled {
  color: #ccc;
}