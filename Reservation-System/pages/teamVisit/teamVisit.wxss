.team {
  background: #f5f5f5;
}

.teamForm,
.teamGuest,
.contact,
.teamSignature {
  width: 86%;
  padding-left: 5%;
  padding-right: 5%;
  margin: 0 auto;
  background: #ffffff;
}

.teamGuest,
.contact,
.teamSignature {
  margin-top: 3vh;
}

.teamGuestText {
  text-align: center;
  font-size: 35rpx;
  font-weight: bold;
  padding: 2vh 0;
}

.alumni {
  height: 10vh;
}

.teamStepper {
  width: 70%;
}

.alumnCheckBox {
  width: 70%;
  height: 100%;
}

.welcomeDemo {
  width: 90%;
  margin: 0 auto;
  height: 10vh;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: center;
  font-size: 30rpx;
  color: rgb(185, 185, 185);
}

.teamSubmit {
  border: 1px solid #ddd;
  background: #fffffF;
  font-size: 30rpx;
  font-weight: 500;
  margin: 3vh 0;
  border-radius: 20rpx;
}

.teamSignature {
  justify-content: space-around;
  padding: 2vh 5%;
}

.teamSignature input {
  width: 30vw;
  height: 10vh;
  font-size: 40rpx;
  border: 1px solid #ddd;
  padding-left: 10rpx;
}