.container {
  height: 100vh;
  width: 98%;
  margin: auto;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  position: relative;
}

.identify-words {
  width: 100%;
  height: 50vh;
  position: relative;
  color: whitesmoke;
}

.full-name {
  font-size: 40rpx;
  position: absolute;
  width: 520rpx;
  text-align: center;
  top: 40%;
  left: 50%;
  transform: translate(-50%, -40%);
}

.apply-text {
  font-size: 50rpx;
  position: absolute;
  width: 200rpx;
  top: 55%;
  left: 65%;
}

.crest-logo {
  background: #ffffff;
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  padding: 8rpx;
  position: absolute;
  right: 3%;
  top: 50%;
  transform: translate(-3%, -50%);
}

.crest-logo-img {
  width: 100%;
  height: 100%;
}

.team-visit,
.cognitive-learning {
  background: #5F6579;
  width: 100%;
  height: 14vh;
  padding: 3vh 0;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.entrance {
  color: #ffffff;
  font-size: 40rpx;
  font-weight: 900;
  letter-spacing: 5rpx;
  padding-left: 30rpx;
}

.introduction {
  color: #ddd;
  font-size: 30rpx;
  padding-left: 30rpx;
}

.footer {
  color: rgb(204, 202, 202);
  font-size: 30rpx;
}

.u-wrp-bnr {
  width: 100%;
  height: 600rpx;
  display: block;
  position: relative;
  background: #f0f0f0;
}

.u-img-slide {
  width: 100%;
  height: inherit;
  filter: blur(3rpx);
}