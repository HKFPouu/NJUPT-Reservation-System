.cognitiveLearning {
  background: #f5f5f5;
}

.cognitiveLearningForm,
.cognitiveLearningGuest,
.contact,
.cognitiveLearningSignature,
.cognitiveLearningDownload {
  width: 86%;
  padding-left: 5%;
  padding-right: 5%;
  margin: 0 auto;
  background: #ffffff;
}

.cognitiveLearningGuest,
.contact,
.cognitiveLearningSignature,
.cognitiveLearningDownload {
  margin-top: 3vh;
}

.cognitiveLearningGuestText {
  text-align: center;
  font-size: 35rpx;
  font-weight: bold;
  padding: 2vh 0;
}

.cognitiveLearningSubmit {
  border: 1px solid #ddd;
  background: #fffffF;
  font-size: 30rpx;
  font-weight: 500;
  margin: 3vh 0;
  border-radius: 20rpx;
}

.cognitiveLearningSignature {
  justify-content: space-around;
  padding: 2vh 5%;
}

.cognitiveLearningSignature input {
  width: 30vw;
  height: 10vh;
  font-size: 40rpx;
  border: 1px solid #ddd;
  padding-left: 10rpx;
}
.cognitiveLearningDownload{
  justify-content: space-around;
}
.cognitiveLearningDownload image{
  width: 80rpx;
  height: 80rpx;
}
.cognitiveLearningDownload-text{
  padding: 3vh 0;
  height: 12vh;
  flex-direction: column;
  align-items: flex-start;
  justify-content: space-around;
  color: #757575;
}